<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <InteractionDef>
    <defName>DIL_GiveComfort</defName>
    <workerClass>PositiveConnectionsNmSpc.InteractionWorker_GiveComfort</workerClass>
    <symbol>Things/Mote/SpeechSymbols/KindWords</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->I comforted [RECIPIENT_nameDef] when they were feeling down.</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] comforted me when I was feeling down.</li>
